{
	"name": "NAME",
	"build": {
		"context": "..",
		"dockerfile": "../Dockerfile"
	},
	"shutdownAction": "stopContainer",
	"remoteUser": "vscode",
	"customizations": {
		"vscode": {
			"extensions": [
				"ms-python.python",
				"ms-python.pylint",
				"ms-python.isort",
				"ms-python.black-formatter",
				"njpwerner.autodocstring",
				"streetsidesoftware.code-spell-checker"
				// "github.copilot"
			],
			"settings": {
				"terminal.integrated.defaultProfile.linux": "bash"
			}
		}
	}
}
{
	"name": "NAME",
	"build": {
		"context": "..",
		"dockerfile": "../Dockerfile"
	},
	"shutdownAction": "stopContainer",
	"remoteUser": "vscode",
	"customizations": {
			"vscode": {
					"extensions": [
							"ms-python.python",
